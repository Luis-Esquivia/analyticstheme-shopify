{{ 'products.css' | asset_url | stylesheet_tag }}

<div class="products-section">
  {% for block in section.blocks %}
    <div class="product">
      <div class="product__img-container">
        <img
          src="{{ block.settings.product.images[0] | img_url: 'master' }}"
          width="204"
          alt="{{ block.settings.product.title }}"
          class="product__img">
        <p class="product__qualification">
          {% render 'star-icon' %} 5
        </p>
      </div>
      <div class="product__text-container">
        <span class="product__type">{{ block.settings.product.vendor }}</span>
        <br>
        <a
          href="{{ block.settings.product.url }}"
          class="product__name"
          aria-label="Ver producto {{ block.settings.product.title }}">{{ block.settings.product.title }}</a>
        <div class="product__info">
          <p class="product__info-price">{{ block.settings.product.price | money }}</p>
          {% include 'entrega-hoy' %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Products Home",
    "blocks": [
      {
        "name": "Product",
        "type": "product",
        "limit": 4,
        "settings": [
          {
            "type": "product",
            "label": "Product",
            "id": "product"
          }
        ]
      }
    ]
  }
{% endschema %}